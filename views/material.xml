<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- explicit list view definition -->

    <record model="ir.ui.view" id="materials.list">
      <field name="name">materials list</field>
      <field name="model">materials.materials</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="value"/>
          <field name="value2"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="materials.action_window">
      <field name="name">materials window</field>
      <field name="res_model">materials.materials</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->

    <record model="ir.actions.server" id="materials.action_server">
      <field name="name">materials server</field>
      <field name="model_id" ref="model_materials_materials"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>


    <!-- Top menu item -->

    <menuitem name="materials" id="materials.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Menu 1" id="materials.menu_1" parent="materials.menu_root"/>
    <menuitem name="Menu 2" id="materials.menu_2" parent="materials.menu_root"/>

    <!-- actions -->

    <menuitem name="List" id="materials.menu_1_list" parent="materials.menu_1"
              action="materials.action_window"/>
    <menuitem name="Server to list" id="materials" parent="materials.menu_2"
              action="materials.action_server"/>

    </data>
</odoo>
